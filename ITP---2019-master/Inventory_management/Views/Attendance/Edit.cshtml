@model Inventory_management.Models.attendance_emp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/adminView/adminEmployee2.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4><b>Edit Attendance</b></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    
    <div class="col-md-10">
        <b>Employee ID</b>
        @Html.EditorFor(model => model.empId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.empId, "", new { @class = "text-danger" })
    </div>
</div>

    


<div class="form-group">
    
    <div class="col-md-10">
        <b>Status</b><br/>
        @Html.RadioButton("status", "Present") Present
        @Html.RadioButton("status", "Absent") Absent
    </div>
</div>



<div class="form-group">
    
    <div class="col-md-10">
        <b>Date</b>
        @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-dark" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-primary", @style = "color:white" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
