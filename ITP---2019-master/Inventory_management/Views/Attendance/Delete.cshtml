@using Inventory_management.Models
@model Inventory_management.Models.attendance_emp

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/adminView/adminEmployee2.cshtml";
}


<div>
    <h4><b>Delete Attendance</b></h4>
    <h5>Are you sure you want to delete this?</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Employee ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.empId)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-primary", @style = "color:white" })
        </div>
    }
</div>
