@using Inventory_management.Models
@model Inventory_management.Models.employee

@{
    ViewBag.Title = "Create";
     Layout = "~/Views/Shared/adminView/adminEmployee.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2><b>Add New Employee</b></h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <b>Employee ID</b>
                @Html.EditorFor(model => model.empId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.empId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <b>Name</b>
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <b>Username</b>
                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <b>Password</b><br />
                @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--gender-->

        <div class="form-group">
            <div class="col-md-10">
                <b>Gender</b><br />
                @Html.RadioButton("gender", "Male") Male
                @Html.RadioButton("gender", "Female") Female
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-10">
                <b>Contact</b>
                @Html.EditorFor(model => model.contact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contact, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <b>Address</b>
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <b>Specialisation</b><br />
                @Html.RadioButton("specialisation", "Weight loss") Weight loss
                @Html.RadioButton("specialisation", "Muscle building") Muscle building
                @Html.RadioButton("specialisation", "Cardio") Cardio
                @Html.RadioButton("specialisation", "Calisthenics") Calisthenics
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-10">
                <b>Shift</b><br />
                @Html.RadioButton("shift", "Day") Day
                @Html.RadioButton("shift", "Night") Night
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <b>Date of Birth</b>
                @Html.EditorFor(model => model.bday, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <b>NIC</b>
                @Html.EditorFor(model => model.nic, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <b>Email</b>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-primary", @style = "color:white" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
